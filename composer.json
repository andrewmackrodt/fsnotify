{
  "name": "andrewmackrodt/fsnotify",
  "type": "library",
  "description": "Event based file system watcher for PHP",
  "license": "MIT",
  "authors": [
    {
      "name": "Andrew Mackrodt",
      "email": "andrewmackrodt@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "amphp/process": "^1.1",
    "amphp/react-adapter": "dev-promise",
    "composer/xdebug-handler": "^1.3",
    "react/event-loop": "^1.1",
    "symfony/event-dispatcher": "^4.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.15",
    "mockery/mockery": "^1.2",
    "phpunit/phpunit": "^8.2",
    "sempro/phpunit-pretty-print": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Denimsoft\\FsNotify\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Denimsoft\\FsNotify\\Test\\": "tests/"
    }
  },
  "scripts": {
    "code-style": "vendor/bin/php-cs-fixer fix",
    "test": "vendor/bin/phpunit"
  },
  "repositories": [
    { "type": "vcs", "url": "https://github.com/andrewmackrodt/react-adapter" }
  ],
  "config": {
    "sort-packages": true
  }
}
